{
  "compilerOptions": {
    "incremental": true,
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true /* This wasn't needed before #2804 - why? */,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
